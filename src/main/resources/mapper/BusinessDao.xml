<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muma.dao.BusinessDao">

	<insert id="addShop">
		INSERT INTO
			tbl_shop(reg_phone,shop_id,shop_name,shop_url,shop_type,shop_ww,
			         status,repeat_day,create_by,create_time)
		VALUES
			(#{regPhone},#{shopId},#{shopName},#{shopUrl},#{shopType},#{shopWw},
			#{status},#{repeatDay},#{createBy},now())
	</insert>

	<select id="queryByRegPhone" resultType="com.muma.entity.Shop">
		SELECT reg_phone,shop_id,shop_name,shop_url,shop_type,shop_ww,believe,believe_day,status,repeat_day,create_time
		FROM tbl_shop
		WHERE reg_phone= #{regPhone}
	</select>

</mapper>